{
  "name": "TreBis",
  "short_name": "TreBis",
  "description": "Расширение для автоматического создания списка в Trello и просмотра статистики.",
  "version": "0.6.2",
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "js": [
        "dist/index.js"
      ]
    }
  ],
  "icons": {
    "36": "images/icon.png",
    "48": "images/icon-48.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "permissions": [
    "https://trello.com/",
    "https://api.trello.com/",
    "https://www.maxim-m.ru/"
  ],
  "manifest_version": 2
}
