{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "src/"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        130
      ]
    },
    "new-parens": true,
    "no-shadowed-variable": false,
    "no-namespace": false,
    "no-string-literal": false,
    "ban-types": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        130
      ]
    }
  }
}